<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="wrap_content"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/Rampampam"
    android:background="@color/BackgroundColor">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Input A"
        android:id="@+id/textView"
        android:layout_above="@+id/bField"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Input B"
        android:id="@+id/textView2"
        android:layout_alignBottom="@+id/bField"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/aField"
        android:textSize="20dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/textView"
        android:textAlignment="gravity"
        android:gravity="bottom"
        android:focusableInTouchMode="true"
        android:hint="@string/aHint"
        android:layout_alignRight="@+id/bField"
        android:layout_alignEnd="@+id/bField" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:id="@+id/bField"
        android:textSize="20dp"
        android:layout_below="@+id/aField"
        android:layout_toRightOf="@+id/textView"
        android:layout_toStartOf="@+id/button"
        android:textAlignment="gravity"
        android:focusableInTouchMode="true"
        android:gravity="bottom"
        android:hint="@string/bHint"
        android:ems="10"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GO!"
        android:id="@+id/button"
        android:clickable="true"
        android:onClick="onClick"
        android:enabled="true"
        android:textSize="30dp"
        android:layout_below="@+id/textView2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:id="@+id/listView"
        android:textSize="30dp"
        android:textAlignment="gravity"
        android:layout_below="@+id/button"
        android:layout_alignRight="@+id/bField"
        android:layout_alignEnd="@+id/bField"
        android:layout_marginBottom="208dp"
        android:layout_alignParentBottom="true" />

</RelativeLayout>
